{
	"manifest_version": 2,
	"name": "GitHub Widener",
	"version": "0.1",
	"description": "Expands the GitHub code pane to the full window width.",
	"homepage": "https://github.com/danstewart/github-widener",

	"icons": {
		"48": "icons/gh-widener-48.png"
	},

	"content_scripts": [
		{
			"matches": ["*://*.github.com/*"],
			"js": ["widener.js"]
		}
	]
}
